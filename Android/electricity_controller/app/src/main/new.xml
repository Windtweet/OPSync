<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:clipChildren="false" android:padding="30dp"
    tools:context=".MainActivity">

    <TextView android:id="@+id/electricity" android:layout_width="246dp"
        android:layout_height="141dp" android:layout_marginStart="4dp"
        android:layout_marginTop="8dp" android:fontFamily="@font/abrilfatface"
        android:text="@string/electricity" android:textAppearance="@style/electricity"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/primary_fon" android:layout_width="212dp"
        android:layout_height="53dp" android:layout_marginStart="2dp" android:layout_marginTop="8dp"
        android:fontFamily="@font/misans" android:gravity="top" android:text="@string/primary_fon"
        android:textAppearance="@style/primary_fon" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/electricity" />

    <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical" app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView android:id="@+id/cardView1" android:layout_width="300dp"
        android:layout_height="300dp" android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#8C55FFEB" app:cardCornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintStart_toEndOf="@id/primary_fon"
        app:layout_constraintTop_toTopOf="@id/guideline_vertical_center">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/tv_battery_level" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center"
                android:text="当前电池剩余电量" android:textAppearance="@style/some_id"
                app:layout_constraintBottom_toTopOf="@id/left_num"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView android:id="@+id/left_num" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:elevation="5dp"
                android:fontFamily="@font/zillaslab" android:gravity="center" android:text="75%"
                android:textAppearance="@style/some_id" android:textSize="72sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:id="@+id/cardView2" android:layout_width="300dp"
        android:layout_height="300dp" android:layout_marginStart="8dp"
        app:cardBackgroundColor="#8CFFCF55" app:cardCornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintTop_toTopOf="@id/guideline_vertical_center">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/tv_current_usage" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center"
                android:text="本月当前用电量" android:textAppearance="@style/some_id"
                app:layout_constraintBottom_toTopOf="@id/left_num2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView android:id="@+id/left_num2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:elevation="5dp"
                android:fontFamily="@font/zillaslab" android:gravity="center"
                android:text="130\nKW·h" android:textAppearance="@style/some_id"
                android:textSize="72sp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 其他视图 -->

</androidx.constraintlayout.widget.ConstraintLayout>