<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#E1FFF1"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:contentDescription="background_image" />

    <TextView
        android:id="@+id/electricity"
        android:layout_width="246dp"
        android:layout_height="141dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abrilfatface"
        android:text="@string/electricity"
        android:textAppearance="@style/electricity"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/primary_fon"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/electricity"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/misans"
        android:gravity="top"
        android:text="@string/primary_fon"
        android:textAppearance="@style/primary_fon"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户(初始账户admin)"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_below="@id/primary_fon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="请输入账户名"
        android:background="@drawable/edit_text_background" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码(初始密码123456)"
        android:textColor="#FFFFFF"
        android:layout_below="@id/et_username"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_below="@id/et_password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="#333333"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="访客体验"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="#333333"
        android:textColor="#FFFFFF" />

</RelativeLayout>
